<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:id="@+id/loginActiv"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




    <ImageView
        android:id="@+id/login_pic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/login_photo" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_pic"
        android:hint="Email...."
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/inputs"
        android:padding="2dp"
        android:drawableStart="@drawable/email"
        android:layout_marginTop="5dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_email"
        android:hint="Password...."
        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/inputs"
        android:padding="2dp"
        android:drawableStart="@drawable/password"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        />

    <Button
        android:id="@+id/sigin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_password_tv"
        android:text="SIGN IN"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/btn"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"

        />

    <TextView
        android:id="@+id/forget_password_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/login_password"
        android:text="Forget Your Password ?"
        android:textAlignment="viewEnd"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/need_new_account_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/sigin_button"
        android:text="Need New Accout ?"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:id="@+id/login_using_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:layout_below="@+id/need_new_account_tv"
        android:text="or Login using your Phone"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/phone_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_using_phone"
        android:text="SIGN IN WITH PHONE"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:background="@drawable/btn"
        android:layout_marginTop="5dp"
        android:drawableEnd="@drawable/phone"
        android:drawableLeft="@drawable/phone"
        android:textColor="@android:color/white"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>