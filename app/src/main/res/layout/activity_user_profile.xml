<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_activity"
    tools:context=".UserProfileActivity">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/profile_image"
    android:layout_centerHorizontal="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="110dp"
    android:id="@+id/visit_user_iamge"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="UserName"
        android:id="@+id/visit_user_name"
        android:layout_below="@+id/visit_user_iamge"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="UserStatus"
        android:id="@+id/visit_user_status"
        android:layout_below="@+id/visit_user_name"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"

        />
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/visit_user_send_message"
    android:background="@drawable/btn"
    android:layout_below="@+id/visit_user_status"
    android:text="Send Message"
    android:textSize="15sp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="17dp"
    android:layout_marginLeft="17dp"
    android:textColor="@android:color/white"

    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/visit_user_cancel_message"
        android:background="@drawable/btn"
        android:layout_below="@+id/visit_user_send_message"
        android:text="Cancel Request To Chat"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="17dp"
        android:layout_marginLeft="17dp"
        android:textColor="@android:color/white"
        android:visibility="invisible"

        />



</RelativeLayout>